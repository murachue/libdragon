INSTALLDIR = $(N64_INST)
CFLAGS = -m32 -std=gnu99 -O2 -Wall -Werror -I../../include -lpng

all: mksprite convtool

mksprite: mksprite.c
convtool: convtool.c

install: mksprite convtool
	install -D --mode=755 mksprite $(INSTALLDIR)/bin
	install -D --mode=755 convtool $(INSTALLDIR)/bin

.PHONY: clean install

clean:
	rm -rf mksprite
	rm -rf convtool
